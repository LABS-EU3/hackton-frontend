<?xml version='1.0' encoding='utf-8'?>
<widget id="co.hackton.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hackton</name>
    <icon src="favicon.png" platform="android" width="57" height="57" density="mdpi" />
    <description>
        Hackton - Portal for hackathons
    </description>
    <author email="otieno.awuor.m@gmail.com" href="http://hackton.co">
        Hackton Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
